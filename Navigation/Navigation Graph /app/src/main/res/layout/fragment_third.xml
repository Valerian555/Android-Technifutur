<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThirdFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Third Fragment"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/to_detail_fragment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Detail Fragment"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/food_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food"
        app:layout_constraintBottom_toTopOf="@id/sport_button"/>

    <Button
        android:id="@+id/sport_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sport"
        app:layout_constraintBottom_toTopOf="@id/music_button"/>

    <Button
        android:id="@+id/music_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>